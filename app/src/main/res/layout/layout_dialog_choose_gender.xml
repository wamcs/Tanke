<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layout_dialog_margin_left_right"
    android:layout_marginRight="@dimen/layout_dialog_margin_left_right"
    android:orientation="vertical">

    <RadioButton
        android:id="@+id/layout_dialog_check_box_male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_dialog_check_box_radiobutton_margin"
        android:text="@string/male"
        android:textColor="@color/black10"
        android:textSize="16sp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_center_linear_layout_bottom_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/user_center_split_line"/>

    <RadioButton
        android:id="@+id/layout_dialog_check_box_female"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_dialog_check_box_radiobutton_margin"
        android:text="@string/female"
        android:textColor="@color/black10"
        android:textSize="16sp"/>

</RadioGroup>