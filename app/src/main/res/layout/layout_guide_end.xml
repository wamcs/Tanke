<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/layout_splash_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@mipmap/img_splash_header_3"
        android:contentDescription="@string/content_description"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_splash_header_cover"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/layout_splash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y131"
            android:text="@string/splash_title_1"
            android:textColor="@color/colorPrimary"
            android:textSize="19sp"/>

        <ImageView
            android:id="@+id/layout_splash_mid_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_splash_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y52"
            android:contentDescription="@string/content_description"
            android:src="@mipmap/img_splash_mid_bar"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/layout_splash_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layout_splash_title"
            android:layout_alignRight="@id/layout_splash_title"
            android:layout_below="@id/layout_splash_mid_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y79"
            android:text="@string/splash_brief_1"
            android:textColor="@color/grey06"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/layout_splash_ect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_splash_brief"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y52"
            android:src="@mipmap/img_splash_ect"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/enter"
            android:layout_width="wrap_content"
            android:text="你要来挑战么？"
            android:textColor="@color/default_font_color"
            android:background="@drawable/gradient_oval_rect_style"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/y13"
            android:paddingBottom="@dimen/y13"
            android:paddingLeft="@dimen/x26"
            android:paddingRight="@dimen/x26"
            android:layout_marginTop="@dimen/y52"
            android:layout_below="@id/layout_splash_ect"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>