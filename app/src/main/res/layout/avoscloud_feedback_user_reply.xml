<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/x26"
        android:layout_marginLeft="@dimen/x105"
        android:layout_marginRight="@dimen/x26"
        android:layout_marginTop="@dimen/y26"
        android:background="@mipmap/avoscloud_feedback_user_reply_background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x39"
        android:paddingRight="@dimen/x39" >

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/avoscloud_feedback_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/y13"
            android:paddingTop="@dimen/y13"
            android:textColor="#b1b1b1"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/avoscloud_feedback_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/y13"
            android:visibility="gone" >
        </ImageView>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/avoscloud_feedback_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/avoscloud_timestamp_gray"
            android:textSize="12sp" >
        </com.lptiyu.tanke.widget.CustomTextView>
    </LinearLayout>

</RelativeLayout>