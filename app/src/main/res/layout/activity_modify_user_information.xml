<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@id/tool_bar"
        style="@style/Toolbar">

        <include layout="@layout/layout_default_toolbar"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#999999"
        android:descendantFocusability="blocksDescendants"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_platform_tel_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/platform_info_bind_tel"
            android:textColor="@color/white10"
            android:textSize="12sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@id/modify_user_info_avatar_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_modify_user_information_user_avatar_root_height"
        android:background="@drawable/fragment_user_center_item_bg">

        <com.lptiyu.tanke.widget.CustomTextView
            style="@style/ModifyUserInfoItemTitle"
            android:text="@string/avatar"/>

        <ImageView
            android:id="@+id/img_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:src="@drawable/enter_map"/>

        <com.lptiyu.tanke.widget.CircularImageView
            android:id="@id/modify_user_info_avatar_image"
            android:layout_width="@dimen/activity_modify_user_information_avatar_width_height"
            android:layout_height="@dimen/activity_modify_user_information_avatar_width_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:layout_toLeftOf="@id/img_arrow1"/>


    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_center_linear_layout_bottom_line_height"
        android:layout_marginLeft="@dimen/under_line_margin_left_right"
        android:layout_marginRight="@dimen/under_line_margin_left_right"
        android:background="@color/user_center_split_line"/>

    <RelativeLayout
        android:id="@id/modify_user_info_nickname_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modify_user_info_item_height"
        android:background="@drawable/fragment_user_center_item_bg">

        <com.lptiyu.tanke.widget.CustomTextView
            style="@style/ModifyUserInfoItemTitle"
            android:text="@string/nickname"/>

        <ImageView
            android:id="@+id/img_arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:src="@drawable/enter_map"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@id/modify_user_info_nickname_text"
            style="@style/ModifyUserInfoItemText"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:layout_toLeftOf="@+id/img_arrow2"
            android:text="狂战士"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_center_linear_layout_bottom_line_height"
        android:layout_marginLeft="@dimen/under_line_margin_left_right"
        android:layout_marginRight="@dimen/under_line_margin_left_right"
        android:background="@color/user_center_split_line"/>

    <RelativeLayout
        android:id="@id/modify_user_info_birthday_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modify_user_info_item_height"
        android:background="@drawable/fragment_user_center_item_bg">

        <com.lptiyu.tanke.widget.CustomTextView
            style="@style/ModifyUserInfoItemTitle"
            android:text="生日"/>

        <ImageView
            android:id="@+id/img_arrow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:src="@drawable/enter_map"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@id/modify_user_info_birthday_text"
            style="@style/ModifyUserInfoItemText"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:layout_toLeftOf="@id/img_arrow3"
            android:text="1970-01-01"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_center_linear_layout_bottom_line_height"
        android:layout_marginLeft="@dimen/under_line_margin_left_right"
        android:layout_marginRight="@dimen/under_line_margin_left_right"
        android:background="@color/user_center_split_line"/>

    <RelativeLayout
        android:id="@id/modify_user_info_gender_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modify_user_info_item_height"
        android:background="@drawable/fragment_user_center_item_bg">

        <com.lptiyu.tanke.widget.CustomTextView
            style="@style/ModifyUserInfoItemTitle"
            android:text="@string/gender"/>

        <ImageView
            android:id="@+id/img_arrow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:src="@drawable/enter_map"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@id/modify_user_info_gender_text"
            style="@style/ModifyUserInfoItemText"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:layout_toLeftOf="@id/img_arrow4"
            android:text="男"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_center_linear_layout_bottom_line_height"
        android:layout_marginLeft="@dimen/under_line_margin_left_right"
        android:layout_marginRight="@dimen/under_line_margin_left_right"
        android:background="@color/user_center_split_line"/>

    <RelativeLayout
        android:id="@id/modify_user_info_height_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modify_user_info_item_height"
        android:background="@drawable/fragment_user_center_item_bg">

        <com.lptiyu.tanke.widget.CustomTextView
            style="@style/ModifyUserInfoItemTitle"
            android:text="@string/height"/>

        <ImageView
            android:id="@+id/img_arrow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:src="@drawable/enter_map"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@id/modify_user_info_height_text"
            style="@style/ModifyUserInfoItemText"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:layout_toLeftOf="@id/img_arrow5"
            android:text="177cm"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_center_linear_layout_bottom_line_height"
        android:layout_marginLeft="@dimen/under_line_margin_left_right"
        android:layout_marginRight="@dimen/under_line_margin_left_right"
        android:background="@color/user_center_split_line"/>

    <RelativeLayout
        android:id="@id/modify_user_info_weight_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modify_user_info_item_height"
        android:background="@drawable/fragment_user_center_item_bg">

        <com.lptiyu.tanke.widget.CustomTextView
            style="@style/ModifyUserInfoItemTitle"
            android:text="@string/weight"/>

        <ImageView
            android:id="@+id/img_arrow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:src="@drawable/enter_map"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@id/modify_user_info_weight_text"
            style="@style/ModifyUserInfoItemText"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:layout_toLeftOf="@id/img_arrow6"
            android:text="75kg"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_center_linear_layout_bottom_line_height"
        android:layout_marginLeft="@dimen/under_line_margin_left_right"
        android:layout_marginRight="@dimen/under_line_margin_left_right"
        android:background="@color/user_center_split_line"/>

    <RelativeLayout
        android:id="@id/modify_user_info_location_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modify_user_info_item_height"
        android:background="@drawable/fragment_user_center_item_bg">

        <com.lptiyu.tanke.widget.CustomTextView
            style="@style/ModifyUserInfoItemTitle"
            android:text="所在地"/>

        <ImageView
            android:id="@+id/img_arrow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:src="@drawable/enter_map"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@id/modify_user_info_location_text"
            style="@style/ModifyUserInfoItemText"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/modify_user_info_item_content_margin"
            android:layout_toLeftOf="@id/img_arrow7"
            android:text="湖北 武汉"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_center_linear_layout_bottom_line_height"
        android:layout_marginLeft="@dimen/under_line_margin_left_right"
        android:layout_marginRight="@dimen/under_line_margin_left_right"
        android:background="@color/user_center_split_line"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/modify_user_info_phone_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/modify_user_info_item_height"
        android:visibility="gone">

        <com.lptiyu.tanke.widget.CustomTextView
            style="@style/ModifyUserInfoItemTitle"
            android:text="@string/phone"
            android:textColor="@color/grey06"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/modify_user_info_phone_text"
            style="@style/ModifyUserInfoItemText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="18062145623"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_center_linear_layout_bottom_line_height"
        android:layout_marginLeft="@dimen/under_line_margin_left_right"
        android:layout_marginRight="@dimen/under_line_margin_left_right"
        android:background="@color/user_center_split_line"
        android:visibility="gone"/>

</LinearLayout>
