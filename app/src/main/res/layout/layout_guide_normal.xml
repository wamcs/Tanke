<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/layout_splash_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@mipmap/img_splash_header_1"
        android:contentDescription="@string/content_description"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_splash_header_cover"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/layout_splash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y131"
            android:text="你熟悉的世界&#160;&#160;&#160;&#160;隐藏着更多秘密"
            android:textColor="@color/colorPrimary"
            android:textSize="19sp"/>

        <ImageView
            android:id="@+id/layout_splash_mid_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_splash_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y52"
            android:contentDescription="@string/content_description"
            android:src="@mipmap/img_splash_mid_bar"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/layout_splash_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/layout_splash_title"
            android:layout_alignRight="@id/layout_splash_title"
            android:layout_below="@id/layout_splash_mid_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y79"
            android:text="或隐藏于市井，或流传于民间众口，都等待着你去发掘，这可能需要你的不懈努力"
            android:textColor="@color/grey06"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/layout_splash_ect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_splash_brief"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y52"
            android:src="@mipmap/img_splash_ect"/>

    </RelativeLayout>

</LinearLayout>