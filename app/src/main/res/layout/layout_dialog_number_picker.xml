<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_dialog_margin_left_right"
                android:layout_marginRight="@dimen/layout_dialog_margin_left_right">

    <net.simonvt.numberpicker.NumberPicker
        android:id="@+id/layout_dialog_number_picker_picker"
        android:layout_width="@dimen/layout_dialog_number_picker_width"
        android:layout_height="@dimen/layout_dialog_date_picker_picker_root_height"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/layout_dialog_date_picker_margin"
        style= "@style/NPWidget.Holo.Light.NumberPicker"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layout_dialog_number_picker_picker"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/layout_dialog_number_picker_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:text="@string/dismiss"/>

        <TextView
            android:id="@+id/layout_dialog_number_picker_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:text="@string/ensure"/>

    </LinearLayout>
</RelativeLayout>