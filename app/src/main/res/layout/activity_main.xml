<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lptiyu.tanke.MainActivity">

    <LinearLayout
        android:id="@+id/bottom_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white10"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/page_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/tab_home_selected"
            />

        <ImageView
            android:id="@+id/page_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/tab_message_selected"
            />

        <ImageView
            android:id="@+id/page_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/tab_mine_selected"
            />

    </LinearLayout>

    <View
        android:id="@+id/view_seperator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:layout_above="@id/bottom_button_layout"
        android:background="@drawable/shadow_reverse"/>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_seperator"/>

</RelativeLayout>
