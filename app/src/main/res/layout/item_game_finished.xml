<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/game_finished_list_item"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_game_finished_root_height">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/item_game_finished_img_width"
        android:layout_height="@dimen/item_game_finished_img_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_game_finished_img_margin_left"
        android:contentDescription="@string/content_description"
        android:scaleType="centerCrop"
        android:src="@mipmap/need_to_remove"
        app:riv_corner_radius="@dimen/item_game_finished_img_corner_radius"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_game_finished_content_root_margin_left"
        android:layout_toRightOf="@id/image_view">

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/item_finished_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_finished_title_padding"
            android:text="华科森林记"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/item_finished_type"
            android:text="团队赛"
            android:textSize="12sp"
            android:padding="@dimen/item_finished_title_padding"
            android:layout_toRightOf="@id/item_finished_title"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/item_finished_complete_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_finished_title_padding"
            android:drawablePadding="5dp"
            android:textSize="13sp"
            android:layout_below="@id/item_finished_title"
            android:drawableLeft="@mipmap/game_detail_time"
            android:text="2016.06.21 18:36"
            android:textColor="@color/grey06"
        />

        <com.lptiyu.tanke.widget.CustomTextView
            android:text="完成"
            android:padding="@dimen/item_finished_title_padding"
            android:layout_toRightOf="@id/item_finished_complete_time"
            android:layout_alignBottom="@id/item_finished_complete_time"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/item_finished_consuming_time_pre"
            style="@style/GameDataItemText"
            android:layout_below="@id/item_finished_complete_time"
            android:text="用时 : "
            android:textColor="@color/grey06"
            android:textSize="12sp"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/item_finished_consuming_time"
            style="@style/GameDataItemText"
            android:layout_alignTop="@id/item_finished_consuming_time_pre"
            android:layout_toRightOf="@id/item_finished_consuming_time_pre"
            android:text="45分钟"
            android:textColor="@color/grey04"
            android:textSize="12sp"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/item_finished_exp_pre"
            style="@style/GameDataItemText"
            android:layout_below="@id/item_finished_complete_time"
            android:layout_toRightOf="@id/item_finished_consuming_time"
            android:text="获得 : "
            android:textColor="@color/grey06"
            android:textSize="12sp"/>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/item_finished_exp"
            style="@style/GameDataItemText"
            android:layout_alignTop="@id/item_finished_exp_pre"
            android:layout_toRightOf="@id/item_finished_exp_pre"
            android:text="112经验值"
            android:textColor="@color/grey04"
            android:textSize="12sp"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_center_linear_layout_bottom_line_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/user_center_split_line"/>

</RelativeLayout>