<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layout_dialog_margin_left_right"
    android:layout_marginRight="@dimen/layout_dialog_margin_left_right">

    <LinearLayout
        android:id="@+id/layout_dialog_date_picker_picker_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_dialog_date_picker_picker_root_height"
        android:orientation="horizontal"
        android:padding="@dimen/layout_dialog_date_picker_picker_root_padding">


        <net.simonvt.numberpicker.NumberPicker
            android:id="@+id/layout_dialog_date_picker_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_dialog_date_picker_margin"
            android:layout_weight="1"
            style="@style/NPWidget.Holo.Light.NumberPicker"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/layout_dialog_date_picker_margin"
            android:text="@string/year"
            android:textColor="@color/white10"
            android:textSize="16sp"/>

        <net.simonvt.numberpicker.NumberPicker
            android:id="@+id/layout_dialog_date_picker_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_dialog_date_picker_margin"
            android:layout_weight="1"
            style= "@style/NPWidget.Holo.Light.NumberPicker"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/layout_dialog_date_picker_margin"
            android:text="@string/month"
            android:textColor="@color/white10"
            android:textSize="16sp"/>

        <net.simonvt.numberpicker.NumberPicker
            android:id="@+id/layout_dialog_date_picker_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_dialog_date_picker_margin"
            android:layout_weight="1"
            style= "@style/NPWidget.Holo.Light.NumberPicker"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/layout_dialog_date_picker_margin"
            android:text="@string/day"
            android:textColor="@color/white10"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/layout_dialog_date_picker_picker_root"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp">


        <TextView
            android:id="@+id/layout_dialog_date_picker_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:text="取消"/>

        <TextView
            android:id="@+id/layout_dialog_date_picker_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:text="确定"/>

    </LinearLayout>
</RelativeLayout>