<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gamedata.GameDataActivity">

    <android.support.v7.widget.Toolbar
        android:id="@id/tool_bar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activity_game_data_toolbar_imageview_left"
                android:layout_width="@dimen/activity_game_data_toolbar_button_width_height"
                android:layout_height="@dimen/activity_game_data_toolbar_button_width_height"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:padding="@dimen/default_toolbar_imageview_padding"
                android:src="@mipmap/img_last_white"/>

            <TextView
                android:id="@+id/activity_game_data_toolbar_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_toolbar_textview_margin_left"
                android:layout_toRightOf="@id/activity_game_data_toolbar_imageview_left"
                android:padding="@dimen/default_toolbar_textview_padding"
                android:textColor="@color/default_font_color"
                android:textSize="@dimen/default_toolbar_textview_text_size"/>

            <ImageView
                android:id="@+id/activity_game_data_toolbar_imageview_right"
                android:layout_width="@dimen/activity_game_data_toolbar_button_width_height"
                android:layout_height="@dimen/activity_game_data_toolbar_button_width_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_game_data_toolbar_imageview_right_margin_right"
                android:contentDescription="@null"
                android:padding="@dimen/default_toolbar_imageview_padding"
                android:src="@mipmap/game_details_share_btn"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tool_bar">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
