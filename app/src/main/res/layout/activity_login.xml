<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@id/tool_bar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/login_login_button"
        android:background="@mipmap/img_login_backgroud"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_activity_title"
            android:src="@mipmap/img_splash_logo"
            android:layout_width="@dimen/login_title_size"
            android:layout_height="0dp"
            android:padding="@dimen/x52"
            android:layout_gravity="center"
            android:layout_weight="150"
            />

        <com.lptiyu.tanke.widget.CustomTextView
            android:text="步道探秘"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_weight="80"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/login_edit_layout_margin"
            android:layout_marginRight="@dimen/login_edit_layout_margin"
            android:layout_weight="180"
            >

            <com.lptiyu.tanke.widget.LoginEditView
                android:id="@id/login_input_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_edit_height"
                android:layout_marginBottom="@dimen/login_edit_layout_item_distance"
                android:gravity="center_vertical"
                app:takBaseColor="@color/base_text_color"
                app:takHintText="@string/please_input_phone"
                app:takImageToText="@dimen/custom_edit_distance"
                app:takInnerHeight="@dimen/custom_edit_inner_height"
                app:takSymbolDrawable="@mipmap/img_profile"
                app:takTextSize="@dimen/custom_edit_text_size"
                />

            <com.lptiyu.tanke.widget.LoginEditView
                android:id="@id/login_input_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_edit_height"
                android:layout_below="@id/login_input_phone"
                android:gravity="center_vertical"
                app:takBaseColor="@color/base_text_color"
                app:takHintText="@string/please_input_password"
                app:takImageToText="@dimen/custom_edit_distance"
                app:takInnerHeight="@dimen/custom_edit_inner_height"
                app:takPassWordType="true"
                app:takSymbolDrawable="@mipmap/img_block"
                app:takTextSize="@dimen/custom_edit_text_size"
                />

            <RelativeLayout
                android:id="@id/login_sign_up_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y26"
                android:layout_below="@id/login_input_password"
                android:padding="@dimen/x20">

                <com.lptiyu.tanke.widget.CustomTextView
                    style="@style/loginActivityButton"
                    android:text="@string/login_new_user"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@id/login_forget_password_button"
                android:layout_width="wrap_content"
                android:layout_below="@id/login_input_password"
                android:padding="@dimen/x20"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <com.lptiyu.tanke.widget.CustomTextView
                    style="@style/loginActivityButton"
                    android:layout_marginTop="@dimen/y26"
                    android:layout="@id/login_sign_up_button"
                    android:text="@string/login_forget_password"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="130"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:orientation="vertical">

            <com.lptiyu.tanke.widget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/login_other_method"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="13sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/y34"
                android:layout_marginTop="@dimen/y21">

                <ImageView
                    android:id="@id/login_weixin_button"
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/x150"
                    android:layout_marginRight="@dimen/y42"
                    android:background="@mipmap/img_weixin"/>

                <ImageView
                    android:id="@id/login_qq_button"
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/x150"
                    android:layout_marginRight="@dimen/y42"
                    android:background="@mipmap/img_qq"/>

                <ImageView
                    android:id="@id/login_weibo_button"
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/x150"
                    android:background="@mipmap/img_weibo"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@id/login_login_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_rect_style"
        android:text="@string/login"
        android:textColor="@color/white10"
        android:textSize="15sp"/>
</RelativeLayout>

