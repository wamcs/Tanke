<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_root"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:padding="10dp"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/main_page_item_img_width"
        android:layout_height="@dimen/main_page_item_img_height"
        android:layout_centerVertical="true"
        android:contentDescription="@string/content_description"
        android:src="@mipmap/need_to_remove"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view"
        android:layout_centerVertical="true"
        android:paddingLeft="3dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_page_item_text_size_normal"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:text="华科森林记"
            />
        <TextView
            android:id="@+id/team_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/title"
            android:layout_alignBottom="@id/title"
            android:paddingLeft="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/main_page_item_text_size_small"
            android:text="团队赛事"
            />
        <TextView
            android:id="@+id/location"
            android:drawableLeft="@mipmap/main_page_item_location"
            android:layout_below="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:drawablePadding="5dp"
            android:textSize="@dimen/main_page_item_text_size_small"
            android:text="洪山区-华科校区"
            />
        <TextView
            android:id="@+id/time"
            android:drawableLeft="@mipmap/main_page_item_time"
            android:layout_below="@id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:textSize="@dimen/main_page_item_text_size_small"
            android:text="04.10-04.12"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_page_item_text_size_small"
        android:textColor="@color/colorPrimary"
        android:text="内测中"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/image_view"
        />

</RelativeLayout>