<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/item_root"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:orientation="horizontal"
                android:padding="10dp">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/main_page_item_img_width"
        android:layout_height="@dimen/main_page_item_img_height"
        android:layout_centerVertical="true"
        android:contentDescription="@string/content_description"
        android:scaleType="centerCrop"
        android:src="@mipmap/need_to_remove"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/image_view"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="华科森林记"
            android:textSize="@dimen/main_page_item_text_size_normal"
            android:textStyle="bold"
            android:maxLength="7"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/team_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/title"
            android:layout_toRightOf="@id/title"
            android:paddingLeft="2dp"
            android:text="团队赛事"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/main_page_item_text_size_small"
            />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:drawableLeft="@mipmap/main_page_item_location"
            android:drawablePadding="5dp"
            android:paddingBottom="2dp"
            android:paddingTop="3dp"
            android:text="洪山区-华科校区"
            android:textSize="@dimen/main_page_item_text_size_small"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:drawableLeft="@mipmap/main_page_item_time"
            android:paddingTop="4dp"
            android:drawablePadding="5dp"
            android:text="04.10-04.12"
            android:textSize="@dimen/main_page_item_text_size_small"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/image_view"
        android:text="内测中"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/main_page_item_text_size_small"
        />

</RelativeLayout>