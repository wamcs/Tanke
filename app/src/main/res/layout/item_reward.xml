<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/toolbar_gradient">

                <com.lptiyu.tanke.widget.CustomTextView
                    android:id="@+id/reward_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="哈哈哈"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />

                <com.lptiyu.tanke.widget.CustomTextView
                    android:id="@+id/reward_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2014-12-13"
                    />
            </RelativeLayout>

            <com.lptiyu.tanke.widget.CustomTextView
                android:id="@+id/reward_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white10"
                android:minHeight="100dp"
                android:text="这是你的奖励奖励奖励，就是一个奖励，科科"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>