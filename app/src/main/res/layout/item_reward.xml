<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/y26"
    android:layout_marginLeft="@dimen/x52"
    android:layout_marginRight="@dimen/x52"
    android:layout_marginTop="@dimen/y26"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/x13"
    app:cardElevation="@dimen/x3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y79"
            android:background="@drawable/toolbar_gradient">

            <com.lptiyu.tanke.widget.CustomTextView
                android:id="@+id/reward_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="哈哈哈"
                android:padding="@dimen/x13"
                android:layout_marginLeft="@dimen/x13"
                android:textColor="@color/default_font_color"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <com.lptiyu.tanke.widget.CustomTextView
                android:id="@+id/reward_time"
                android:textColor="@color/default_font_color"
                android:layout_width="wrap_content"
                android:padding="@dimen/x13"
                android:layout_marginLeft="@dimen/x13"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2014-12-13"
            />
        </RelativeLayout>

        <com.lptiyu.tanke.widget.CustomTextView
            android:id="@+id/reward_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white10"
            android:minHeight="@dimen/y262"
            android:padding="@dimen/x26"
            android:text="这是你的奖励奖励奖励，就是一个奖励，科科"
        />

    </LinearLayout>

</android.support.v7.widget.CardView>
