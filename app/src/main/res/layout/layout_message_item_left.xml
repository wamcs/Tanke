<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:gravity="end"
    >
    <LinearLayout
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="@dimen/message_padding"
        android:layout_width="@dimen/message_item_layout_width"
        android:layout_height="wrap_content">


        <TextView
            android:id="@id/message_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/message_text_size"
            android:layout_gravity="center"
            android:textColor="@color/grey08"
            android:background="@drawable/message_text_style"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@id/message_item_image_view"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#8BC34A"
            app:civ_shadow_radius="10"
            android:layout_width="@dimen/message_img_size"
            android:layout_height="@dimen/message_img_size"

            android:layout_marginLeft="@dimen/message_margin"
            />
    </LinearLayout>


</LinearLayout>