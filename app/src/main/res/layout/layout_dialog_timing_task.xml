<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="15dp">

    <ImageView
        android:id="@+id/layout_dialog_timing_task_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/img_timing_clock"/>

    <com.lptiyu.tanke.widget.CustomTextView
        android:id="@+id/layout_dialog_timing_task_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/layout_dialog_timing_task_image"
        android:layout_toRightOf="@id/layout_dialog_timing_task_image"
        android:textColor="@color/colorPrimary"
        android:padding="10dp"
        android:textSize="16sp"/>


</RelativeLayout>