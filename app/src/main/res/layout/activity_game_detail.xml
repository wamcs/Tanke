<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ptScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lptiyu.tanke.activities.gamedetail.GameDetailActivity">

    <RelativeLayout
        android:id="@+id/rl_enterOrAbandonGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white10">

        <TextView
            android:id="@+id/tv_enter_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_textview"
            android:gravity="center"
            android:padding="10dp"
            android:text="进入游戏"
            android:textColor="@color/white10"
            android:textSize="20sp"/>
    </RelativeLayout>


    <com.lptiyu.tanke.widget.PullToZoomScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_enterOrAbandonGame"
        android:layout_below="@id/rl_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <include
                layout="@layout/top_view"/>

            <include
                layout="@layout/body_view"/>

        </LinearLayout>
    </com.lptiyu.tanke.widget.PullToZoomScrollView>

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/fan"/>

    <ImageView
        android:id="@+id/img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/fenxiang"/>
</RelativeLayout>
