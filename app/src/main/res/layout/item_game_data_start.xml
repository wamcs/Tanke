<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_game_data_start_root_margin_top_bottom"
    android:layout_marginLeft="@dimen/item_game_data_start_root_margin_left_right"
    android:layout_marginRight="@dimen/item_game_data_start_root_margin_left_right"
    android:layout_marginTop="@dimen/item_game_data_start_root_margin_top_bottom"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/item_game_data_start_root_corner_radius"
    app:cardElevation="@dimen/item_game_data_start_root_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_game_data_task_header_height"
            android:contentDescription="@string/content_description"
            android:src="@drawable/item_game_data_header_style"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/item_game_data_start_root_padding_top_bottom"
            android:paddingLeft="@dimen/item_game_data_start_root_padding_right_left"
            android:paddingRight="@dimen/item_game_data_start_root_padding_right_left"
            android:paddingTop="@dimen/item_game_data_start_root_padding_top_bottom">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_game_data_start_image"
                android:layout_width="@dimen/item_game_data_start_img_width"
                android:layout_height="@dimen/item_game_data_start_img_height"
                android:layout_marginLeft="@dimen/item_game_finished_img_margin_left"
                android:layout_marginTop="@dimen/item_game_data_start_image_margin_top"
                android:contentDescription="@string/content_description"
                android:scaleType="centerCrop"
                android:src="@mipmap/need_to_remove"
                app:riv_corner_radius="@dimen/item_game_finished_img_corner_radius"/>

            <com.lptiyu.tanke.widget.CustomTextView
                android:id="@+id/item_game_data_start_game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_game_data_start_game_title_margin_left"
                android:layout_marginTop="@dimen/item_game_data_start_game_title_margin_top"
                android:layout_toRightOf="@id/item_game_data_start_image"
                android:padding="@dimen/item_game_data_start_game_title_padding"
                android:text="华科森林记"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/item_game_data_start_game_location_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_game_data_start_game_title"
                android:layout_marginLeft="@dimen/item_game_data_start_game_title_margin_left"
                android:layout_toRightOf="@id/item_game_data_start_image"
                android:padding="@dimen/item_game_data_start_game_location_root_padding">

                <ImageView
                    android:id="@+id/item_game_data_start_game_location_image"
                    android:layout_width="@dimen/item_game_data_start_game_location_image_width_height"
                    android:layout_height="@dimen/item_game_data_start_game_location_image_width_height"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/game_detail_loc"/>

                <com.lptiyu.tanke.widget.CustomTextView
                    android:id="@+id/item_game_data_start_game_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/item_game_data_start_game_location_padding"
                    android:text="洪山区-----华科东校区"
                    android:textColor="@color/grey06"
                    android:textSize="13sp"/>

            </LinearLayout>


            <com.lptiyu.tanke.widget.CustomTextView
                android:id="@+id/item_game_data_start_game_complete_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_game_data_start_game_location_root"
                android:layout_marginLeft="@dimen/item_game_data_start_game_title_margin_left"
                android:layout_toRightOf="@id/item_game_data_start_image"
                android:padding="@dimen/item_game_data_start_game_complete_num_padding"
                android:text="256人完成"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"/>

            <com.lptiyu.tanke.widget.CustomTextView
                android:id="@+id/item_game_data_task_enter_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/item_game_data_start_image"
                android:layout_below="@id/item_game_data_start_image"
                android:layout_marginTop="@dimen/item_game_data_task_enter_game_margin_top"
                android:padding="@dimen/item_game_data_task_enter_game_padding"
                android:text="进入游戏"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/item_game_data_task_complete_time_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/item_game_data_task_enter_game"
                android:layout_marginLeft="@dimen/item_game_data_start_game_title_margin_left"
                android:layout_toRightOf="@id/item_game_data_start_image"
                android:padding="@dimen/item_game_data_task_complete_time_root_padding">

                <ImageView
                    android:id="@+id/item_game_data_task_complete_time_image"
                    android:layout_width="@dimen/item_game_data_task_complete_time_image_width_height"
                    android:layout_height="@dimen/item_game_data_task_complete_time_image_width_height"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/game_detail_time"/>

                <com.lptiyu.tanke.widget.CustomTextView
                    android:id="@+id/item_game_data_task_complete_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_game_data_task_complete_time_margin_left"
                    android:text="2016.05.23  14:45"
                    android:textColor="@color/grey07"
                    android:textSize="15sp"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>