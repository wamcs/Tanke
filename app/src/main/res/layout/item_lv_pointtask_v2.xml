<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rl_title"
        android:layout_alignRight="@id/rl_title"
        android:layout_below="@id/rl_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:visibility="gone"/>


    <RelativeLayout
        android:id="@+id/rl_mission_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/webView"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tv_left_line"
            android:layout_width="30dp"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:background="@color/grey06"/>

        <TextView
            android:id="@+id/tv_misstion_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_left_line"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/tv_left_line"
            android:maxLines="1"
            android:text="mission success"/>

        <TextView
            android:id="@+id/tv_right_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignBaseline="@id/tv_misstion_success"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_misstion_success"
            android:background="@color/grey06"/>
    </RelativeLayout>

</RelativeLayout>

