<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/message_list_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y210"
    android:background="@drawable/item_message_list_bg_style"
    android:paddingLeft="@dimen/x50"
    android:paddingRight="@dimen/x50">

    <com.lptiyu.tanke.widget.CircularImageView
        android:id="@+id/message_list_item_picture"
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/x160"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x30"
        android:background="@color/transparent"
        android:src="@mipmap/ic_launcher"
        app:civ_border="false"
        app:civ_shadow="false"/>

    <com.lptiyu.tanke.widget.CustomTextView
        android:id="@+id/message_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/message_list_item_picture"
        android:layout_marginTop="@dimen/y10"
        android:layout_toRightOf="@id/message_list_item_picture"
        android:padding="@dimen/x8"
        android:text="官方资讯"
        android:textSize="17sp"
        android:textStyle="bold"
    />

    <ImageView
        android:id="@+id/message_list_item_red_spot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/message_list_item_name"
        android:layout_toRightOf="@id/message_list_item_name"
        android:contentDescription="@string/content_description"
        android:src="@mipmap/img_red_spot"/>

    <com.lptiyu.tanke.widget.CustomTextView
        android:id="@+id/message_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/message_list_item_name"
        android:padding="@dimen/x8"
        android:text="10:01"
        android:textColor="@color/grey06"
        android:textSize="14sp"/>

    <com.lptiyu.tanke.widget.CustomTextView
        android:id="@+id/message_list_item_content"
        android:layout_width="@dimen/x525"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_list_item_name"
        android:layout_marginTop="@dimen/y8"
        android:layout_toRightOf="@id/message_list_item_picture"
        android:maxLines="1"
        android:padding="@dimen/x8"
        android:text="今天这个实则呢吗好似阿斯顿两个空间塑料袋反馈给多人"
        android:textColor="@color/grey06"
        android:textSize="14sp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_center_linear_layout_bottom_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/user_center_split_line"/>

</RelativeLayout>
