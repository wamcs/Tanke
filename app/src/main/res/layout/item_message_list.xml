<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.lptiyu.tanke.widget.CustomTextView
        android:id="@+id/message_item_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y52"
        android:background="#BEBEBE"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:text="2016-07-16"
        android:textColor="@color/white10"
        android:textSize="@dimen/message_time_text_size"/>


    <RelativeLayout
        android:id="@+id/layout_message_item_right_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_item_time_text"
        android:layout_marginLeft="@dimen/message_item_right_margin_left_right"
        android:layout_marginRight="@dimen/message_item_right_margin_left_right"
        android:layout_marginTop="@dimen/y26"
        android:background="@drawable/message_item_right_bg_style">

        <TextView
            android:id="@+id/message_item_title"
            style="@style/TextAppearance.UserCenter.middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/message_item_title_margin_left"
            android:layout_marginTop="@dimen/y18"
            android:padding="@dimen/message_item_title_padding"
            android:text="阅读原文"/>

        <TextView
            android:id="@+id/message_item_time"
            style="@style/TextAppearance.UserCenter.small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_item_title"
            android:layout_marginLeft="@dimen/message_item_time_margin_left"
            android:paddingBottom="@dimen/message_item_time_padding"
            android:paddingLeft="@dimen/message_item_time_padding"
            android:text="6月25日"/>

        <ImageView
            android:id="@+id/message_item_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y500"
            android:layout_below="@id/message_item_time"
            android:layout_marginBottom="@dimen/y26"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginRight="@dimen/x26"
            android:scaleType="centerCrop"/>

    </RelativeLayout>

</RelativeLayout>