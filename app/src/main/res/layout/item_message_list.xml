<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_list_item_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="60dp"
                app:roundAsCircle="true"
                android:id="@+id/message_list_item_picture"
                android:layout_height="60dp" />
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/message_list_item_tag"
                android:layout_width="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="10dp"
                android:src="#ff0000"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="230dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/message_list_item_name"
                android:textSize="24sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/message_list_item_content"
                android:textSize="16sp"
                android:textColor="@color/grey06"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/message_list_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey06"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:text="2016-06-06"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black06"/>
</LinearLayout>
