<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent_b"
                android:gravity="center">

    <TextView
        android:id="@+id/tv_result_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="什么都没有发现"
        android:textColor="@color/white10"
        android:textSize="18sp"/>

    <RelativeLayout
        android:id="@+id/rl_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_result_tip"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_exp_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经验"
            android:textColor="@color/white10"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_exp_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_exp_tip"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_exp_tip"
            android:text="+1"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_exp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_score_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"
            android:textColor="@color/white10"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_score_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_score_tip"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_score_tip"
            android:text="+1"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_red_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_score"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/tv_red_wallet_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hong"/>

        <TextView
            android:id="@+id/tv_red_wallet_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_red_wallet_tip"
            android:text="三元现金红包"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_red_wallet"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:src="@drawable/task_result_wrong"/>

        <TextView
            android:id="@+id/tv_continue_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_result"
            android:background="@drawable/shape_continue_scan"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp"
            android:text="关闭"
            android:textColor="@color/white10"/>
    </RelativeLayout>


</RelativeLayout>