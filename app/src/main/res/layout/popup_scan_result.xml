<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/most_transparent">

    <TextView
        android:id="@+id/tv_continue_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_continue_scan"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:text="关闭"
        android:textColor="@color/white10"/>

    <ImageView
        android:id="@+id/img_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_continue_scan"
        android:layout_alignRight="@id/tv_continue_scan"
        android:layout_marginRight="10dp"
        android:src="@drawable/task_result_wrong"/>

    <TextView
        android:id="@+id/tv_result_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/img_result"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:text="什么都没有发现"
        android:textColor="@color/white10"
        android:textSize="18sp"/>

</RelativeLayout>